Bootstrap: shub
From: outbackCrustacian/python_singularity_recipes:python

%setup
   #make directory for files to be created to
   mkdir ${SINGULARITY_ROOTFS}/rootdir

%post
   yes | yum install vim-X11 vim-common vim-enhanced vim-minimal
   yum install -y wget
   yum install -y cmake

   cd /rootdir
   wget -q https://root.cern.ch/download/root_v6.14.02.source.tar.gz
   tar xf root_v6.14.02.source.tar.gz --strip-components=1

   cmake ../root
   cmake --build
